<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="260dp"
	android:orientation="horizontal"
	android:padding="8dp">

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_marginRight="4dp"
		android:layout_weight="1">

		<ImageView
			android:id="@+id/item_gallery_leftImageView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop" />

		<TextView
			android:id="@+id/item_gallery_leftTitleTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="#90222222"
			android:gravity="center"
			android:paddingBottom="16dp"
			android:paddingTop="16dp"
			android:text="IMG_4123.jpg"
			android:textColor="@android:color/white" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/item_gallery_rightRelativeLayout"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_marginLeft="4dp"
		android:layout_weight="1">

		<ImageView
			android:id="@+id/item_gallery_rightImageView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop" />

		<TextView
			android:id="@+id/item_gallery_rightTitleTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="#90222222"
			android:gravity="center"
			android:paddingBottom="16dp"
			android:paddingTop="16dp"
			android:text="IMG_4123.jpg"
			android:textColor="@android:color/white" />
	</RelativeLayout>
</LinearLayout>
